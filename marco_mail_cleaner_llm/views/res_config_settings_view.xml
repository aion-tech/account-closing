<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_llamadoo" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.marco_mail_cleaner_llm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="LLaMadoo" string="LLaMadoo" data-key="marco_mail_cleaner_llm">
                    <h2>
                        <img src="/marco_mail_cleaner_llm/static/description/icon.png" alt="LLaMadoo Icon" class="o_settings_icon"/>
                    LLaMadoo
                    </h2>
                   <div class="row mt16 o_settings_container" id="llamadoo_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div>
                                        <label for="marco_llm_api_url" string="LLaMadoo API URL"/>
                                        <div class="text-muted">Imposta l'URL base per le API di LLaMadoo</div>
                                        <field name="marco_llm_api_url" class="o_light_label"/>
                                    </div>
                                    <div>
                                        <label for="marco_llm_api_endpoint" string="LLaMadoo API Endpoint"/>
                                        <div class="text-muted">Specifica l'endpoint dell'API (es. /summarize)</div>
                                        <field name="marco_llm_api_endpoint" class="o_light_label"/>
                                    </div>
                                    <div>
                                        <label for="marco_llm_api_response_field" string="LLaMadoo API Response Field"/>
                                        <div class="text-muted">Campo JSON della risposta che contiene i dati puliti</div>
                                        <field name="marco_llm_api_response_field" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
