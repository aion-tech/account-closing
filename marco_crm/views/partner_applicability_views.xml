<odoo>
    <record id="view_partner_applicability_tree" model="ir.ui.view">
        <field name="name">res.partner.applicability.tree</field>
        <field name="model">res.partner.applicability</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_applicability_form" model="ir.ui.view">
        <field name="name">res.partner.applicability.form</field>
        <field name="model">res.partner.applicability</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>