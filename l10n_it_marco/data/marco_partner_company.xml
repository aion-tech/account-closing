<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Creazione partner MARCO S.p.A. -->
        <record id="base.main_partner" model="res.partner" context="{'default_is_company': True}">
            <field name="name">MARCO S.p.A.</field>
            <field name="company_id" eval="None"/>
            <field name="is_company" eval="True"/>
            <field name="street">Via Mameli 10</field>
            <field name="city">Brescia</field>
            <field name="zip">25082</field>
            <field name="phone">03021341</field>
            <field name="email">info@marco.it</field>
            <field name="website">https://www.marco.it</field>
            <field name="vat">01239410176</field>
            <field name="fiscalcode">01239410176</field>
            <field name="country_id" ref="base.it"/>
            <field name="state_id" ref="base.state_it_bs"/> <!-- Provincia BS -->
            <field name="image_1920" type="base64" file="marco_base/static/logo.png"/>
        </record>

        <!-- Creazione company MARCO S.p.A. -->
        <record id="base.main_company" model="res.company">
            <field name="name">MARCO S.p.A.</field>
            <field name="partner_id" ref="base.main_partner"/>
            <field name="currency_id" ref="base.EUR"/>
            <field name="vat">01239410176</field>
            <field name="rea_code">246134</field>
            <field name="favicon" type="base64" file="marco_base/static/favicon.ico"/> <!-- Favicon base64 -->
            <field name="logo" type="base64" file="marco_base/static/logo.png"/> <!-- Logo base64 -->
            
      </record>
    </data>
</odoo>
