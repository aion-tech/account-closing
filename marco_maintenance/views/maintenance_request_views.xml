<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record
    id="maintenance_request_view_form_inherit_marco_maintenance"
    model="ir.ui.view"
  >
    <field name="name">maintenance.request.view.form.inherit.marco.maintenance</field>
    <field name="model">maintenance.request</field>
    <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//sheet//div[1]" position="before">
        <field name="folder_exists" invisible="1" />
        <div class="oe_button_box" name="button_box">
          <!-- disabled btn -->
          <button
            name="action_view_documents"
            type="object"
            class="oe_stat_button disabled"
            icon="fa-file-text"
            attrs="{'invisible':[('folder_exists','=',True)]}"
            string="Documents"
          >
            <field name="documents_count" widget="statinfo_websocket" />
          </button>
          <!-- clickable btn -->
          <button
            name="action_view_documents"
            type="object"
            class="oe_stat_button"
            icon="fa-file-text"
            attrs="{'invisible':[('folder_exists','=',False)]}"
            string="Documents"
          >
            <field name="documents_count" widget="statinfo_websocket" />
          </button>
          <button
            name="action_view_equipment_documents"
            type="object"
            class="oe_stat_button"
            icon="fa-file-text"
          >
            <span
              style="
                white-space: normal !important;
                word-wrap: break-word !important;
                word-break: break-word !important;
              "
            >
              Equipment Documents
            </span>
          </button>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
