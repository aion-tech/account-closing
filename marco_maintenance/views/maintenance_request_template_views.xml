<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <!-- maintenance.request.template form view -->
  <record id="maintenance_request_template_view_form" model="ir.ui.view">
    <field name="name">maintenance.request.template.view.form</field>
    <field name="model">maintenance.request.template</field>
    <field name="arch" type="xml">
      <form string="">
        <sheet>
          <group>
            <group>
              <field name="name" />
              <field name="description" />
            </group>
          </group>
          <group>
            <group>
              <field name="category_id" />
              <field name="equipment_ids" widget="many2many_tags" />
            </group>
          </group>
          <group string="Template">
            <group>
              <field name="request_name" />
            </group>
            <group>
              <label for="start_date" string="Validity Date" />
              <div class="o_row">
                <field name="start_date" nolabel="1" class="oe_inline" />
                <i
                  class="fa fa-long-arrow-right mx-2"
                  aria-label="Arrow icon"
                  title="Arrow"
                />
                <field name="end_date" nolabel="1" class="oe_inline" />
              </div>
            </group>
            <group>
              <label for="period" />
              <div>
                <field class="oe_inline" name="period" /> /
                <field class="oe_inline" name="period_type" />
              </div>
              <label for="delta_creation_date" />
              <div>
                <field class="oe_inline" name="delta_creation_date" /> /
                <field
                  class="oe_inline"
                  name="delta_creation_date_period_type"
                />
              </div>
              <label for="duration" />
              <div>
                <field name="duration" widget="float_time" class="oe_inline" />
                <span class="ml8">hours</span>
              </div>
            </group>
            <group>
              <field name="maintenance_team_id" />
              <field name="technician_user_id" />
            </group>
          </group>
          <group>
            <field name="request_description" />
          </group>
          <group>
            <field name="company_id" invisible="1" />
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <!-- maintenance.request.template tree view -->
  <record id="maintenance_request_template_view_tree" model="ir.ui.view">
    <field name="name">maintenance.request.template.view.tree</field>
    <field name="model">maintenance.request.template</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="description" />
        <field name="request_name" />
        <field name="category_id" />
        <field name="equipment_ids_count_and_total" />
        <field name="start_date" />
        <field name="end_date" />
      </tree>
    </field>
  </record>
  <!-- maintenance.request.template search view -->
  <record id="maintenance_request_template_view_search" model="ir.ui.view">
    <field name="name">maintenance.request.template.view.search</field>
    <field name="model">maintenance.request.template</field>
    <field name="arch" type="xml">
      <search string="Search Description">
        <field name="name" />
        <field name="request_name" />
        <field name="start_date" />
        <field name="end_date" />
        <field name="category_id" />
        <field name="equipment_ids" />
        <filter
          name="group_by_category_id"
          string="Category"
          context="{'group_by': 'category_id'}"
        />
      </search>
    </field>
  </record>
  <!-- maintenance.request.template action window -->
  <record
    id="maintenance_request_template_action"
    model="ir.actions.act_window"
  >
    <field name="name">Maintenance Request Templates</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">maintenance.request.template</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="context">{'search_default_group_by_category_id': 1}</field>
  </record>
  <!-- menu -->
  <menuitem
    id="maintenance_request_template_menu"
    name="Maintenance Request Templates"
    parent="maintenance.menu_maintenance_configuration"
    action="maintenance_request_template_action"
    sequence="11"
  />
</odoo>
