<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- user -->
    <record
    id="marco_fastapi_attendance_user"
    model="res.users"
    context="{'no_reset_password': True, 'no_reset_password': True}">
        <field name="name">Marco Fastapi Attendance User</field>
        <field name="login">marco_fastapi_attendance_user</field>
        <field
        name="groups_id"
        eval="[(6, 0, [])]" />
    </record>
    <!-- group -->
    <record
    id="marco_fastapi_attendance_group"
    model="res.groups">
        <field name="name">Marco Fastapi Attendance Api Group</field>
        <field
        name="users"
        eval="[(4, ref('marco_fastapi_attendance_user'))]" />
    </record>
    <!-- endpoint -->
    <record
    model="fastapi.endpoint"
    id="marco_endpoint">
        <field name="name">Marco Attendance</field>
        <field name="description"><![CDATA[
# Marco attendance API
]]></field>
        <field name="app">marco</field>
        <field name="root_path">/badge</field>
        <field
        name="user_id"
        ref="marco_fastapi_attendance_user" />
    </record>
</odoo>
