<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_account_move_form_marco" model="ir.ui.view">
        <field name="name">account.move.form.marco</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Remove the fields from its current position -->
            <xpath expr="//field[@name='fiscal_document_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Re-insert the fields in a different position -->
            <xpath expr="//group[@id='header_right_group']" position="after">
                <group name="always_verify_fields" string="Campi da verificare sempre">
                    <field name="fiscal_position_id"/>
                    <field name="fiscal_document_type_id" class="oe_inline" />                
                </group>
            </xpath>
        </field>
    </record>
</odoo>