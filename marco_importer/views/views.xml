<odoo>
    <record id="marco_importer_form_view" model="ir.ui.view">
        <field name="name">marco.importer.form.view</field>
        <field name="model">marco.importer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <button string="Debug" type="object" name="debug" class="btn-secondary" />
                    <group string="Selezione per import all">
                 
                                <field name="select_all" />
                                <field name="first_select_all_change" attrs="{'invisible': 1}" />
                    </group>
                    
                    <group col="3">
                       
                        <group >
                            <field name="partners" />
                            <field name="items" />
                            <field name="items_quant" />
                            <field name="bom_heads"/>
                            <field name="bom_components"/>
                            <field name="workcenters"/>
                        </group>
                        <group >
                            <field name="bom_operations"/>
                            <field name="suppliers_pricelists"/>
                            <field name="orders"/>
                            <field name="purchase_orders"/>
                            <field name="banks"/>
                            <field name="partners_bank" string="Partners Banks"/>
                        </group>
                        <group >
                            <field name="employees"/>
                        </group>
                        <button string="Importa tutti i selezionati" type="object" name="import_all_data" class="btn-primary" />
                    </group>

                </sheet>
                <footer></footer>
            </form>
        </field>
    </record>
</odoo>
